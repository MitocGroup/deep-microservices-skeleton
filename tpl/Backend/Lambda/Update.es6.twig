'use strict';

import DeepFramework from 'deep-framework';

export default class extends DeepFramework.Core.AWS.Lambda.Runtime {
  /**
   * @param {Array} args
   */
  constructor(...args) {
    super(...args);
  }

  /**
   * @param {Object} request
   */
  handle(request) {
    let itemId = request.getParam('Id');
    let Model = this.kernel.get('db').get('{{ resource }}');

    Model.updateItem(itemId, request.data, (err, item) => {
      if (err) {
        throw new DeepFramework.Core.Exception.DatabaseOperationException(err);
      }

      return this.createResponse(item.get()).send();
    });
  }

  /**
   * Validates request.data
   *
   * @link: https://github.com/MitocGroup/deep-framework/blob/master/docs/components/validation.md
   * @returns {Function}
   */
  validationSchema() {
    /**
     * @param {Object} Joi
     * @link: https://github.com/hapijs/joi/tree/v5.1.0
     */
    return (Joi) => {
      return Joi.object().keys({
        Id: Joi.string().required()
      });
    }
  }
}
